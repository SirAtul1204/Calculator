#:import utils kivy.utils
#:import rgba kivy.utils.get_color_from_hex
<OtherScreen>
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#e62e00")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#ffffff")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows: 1
            pos_hint: {"top": 0.99, "right": 0.99, "left": 0.99}
            size_hint: 0.98, 0.05
            Label:
                id: history
                text: ""
                halign: 'right'
                valign: 'middle'
                color: 0,0,0,1
                text_size: self.size
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#4e474b")
                Rectangle:
                    size: self.size
                    pos: self.pos
            rows:1
            pos_hint: {"top": 0.93, "left": 0.99, "right": 0.99}
            size_hint: 0.98, 0.10
            Label:
                id: output
                text: ""
                halign: 'right'
                valign: 'middle'
                font_size: 40
                text_size: self.size
        FloatLayout:
            #rows: 4
            #cols: 4
            pos_hint: {"top": 0.81, "left": 0.99, "right": 0.99}
            size_hint: 0.98, 0.78
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#3399ff")
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button:
                text: "+"
                text_size: self.size
                pos_hint: {"top": 1, "x": 0}
                size_hint: 0.2, 0.2
                font_size: 40
                halign: 'center'
                valign: 'middle'
                on_release: root.opertationbtn("+")
            Button:
                #remainder
                text: "Mod"
                text_size: self.size
                pos_hint: {"top": 1, "x": 0.2}
                size_hint: 0.2, 0.2
                font_size: 40
                halign: 'center'
                valign: 'middle'
                on_release: root.opertationbtn("%")
            Button:
                #n!
                text: "n!"
                text_size: self.size
                pos_hint: {"top": 1, "x": 0.4}
                size_hint: 0.2, 0.2
                font_size: 40
                halign: 'center'
                valign: 'middle'
                on_release: root.factbtn()
            Button:
                #clr
                text: "C"
                text_size: self.size
                pos_hint: {"top": 1, "x": 0.6}
                size_hint: 0.2, 0.2
                font_size: 40
                halign: 'center'
                valign: 'middle'
